                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <ImageView
